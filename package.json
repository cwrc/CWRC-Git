    "commitizen": "^4.2.4",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "jsdoc-to-markdown": "^7.0.1",
    "mocha": "^9.0.0",
    "nock": "^13.1.0",
    "nyc": "^15.1.0",
    "prettier": "^2.3.1",
    "semantic-release": "^17.4.4"
  }
