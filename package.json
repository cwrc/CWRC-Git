{
  "name": "cwrcgit",
  "version": "0.0.0-development",
  "description": "Client for creating and updating CWRC XML documents in GitHub through the GitHub API.",
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "github"
  ],
  "homepage": "https://github.com/cwrc/CWRC-Git",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-Git/issues"
  },
  "license": "GPL-2.0",
  "contributors": [
    "James Chartrand <jc.chartrand@gmail.com>",
    "Andrew MacDonald <andrewjames.code@gmail.com>",
    "Luciano Frizzera <lucaju@gmail.com>"
  ],
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cwrc/CWRC-Git.git"
  },
  "scripts": {
    "cm": "git-cz",
    "test": "nyc mocha",
    "test:debug": "mocha spec",
    "check-coverage": "nyc check-coverage",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "docs": "jsdoc2md src/index.js > API.md",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "@octokit/rest": "^18.1.0"
  },
  "devDependencies": {
    "chai": "^4.3.0",
    "codecov": "^3.8.1",
    "commitizen": "^4.2.3",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "git-cz": "^4.7.6",
    "husky": "^4.3.8",
    "jsdoc-to-markdown": "^6.0.1",
    "mocha": "^8.2.1",
    "nock": "^13.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.2.1",
    "semantic-release": "^17.3.7"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "exclude": [
      "coverage/**",
      "fixturesAndMocks/**",
      "spec/**",
      "node_modules/**"
    ],
    "include": [
      "spec/**"
    ],
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov"
    ]
  }
}
