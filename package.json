{
  "name": "cwrcgit",
  "version": "0.0.0-development",
  "description": "Client for creating and updating CWRC XML documents in GitHub through the GitHub API.",
  "main": "src/index.js",
  "scripts": {
    "cm": "git-cz",
    "check-coverage": "nyc check-coverage",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "nyc mocha",
    "test:debug": "mocha spec",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cwrc/CWRC-Git.git"
  },
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "github"
  ],
  "author": "“James <“jc.chartrand@gmail.com”> ",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-Git/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-Git#readme",
  "dependencies": {
    "@octokit/rest": "^15.18.1",
    "xmldom": "0.1.27"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.5.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^2.4.1",
    "mocha": "^5.1.1",
    "nock": "^9.6.1",
    "nyc": "^14.1.1",
    "request": "^2.88.0",
    "semantic-release": "^15.13.16",
    "travis-deploy-once": "^5.0.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "exclude": [
      "coverage/**",
      "fixturesAndMocks/**",
      "spec/**",
      "node_modules/**"
    ],
    "include": [
      "spec/**"
    ],
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov"
    ]
  }
}
