{
  "name": "cwrcgit",
  "version": "0.0.0-development",
  "description": "Client for creating and updating CWRC XML documents in GitHub through the GitHub API.",
  "main": "src/index.js",
  "scripts": {
    "cm": "git-cz",
    "check-coverage": "nyc check-coverage",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test": "nyc mocha",
    "test:debug": "mocha spec",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/cwrc/CWRC-Git.git"
  },
  "keywords": [
    "xml",
    "rdf",
    "editor",
    "github"
  ],
  "author": "“James <“jc.chartrand@gmail.com”> ",
  "license": "GPL-2.0",
  "bugs": {
    "url": "https://github.com/cwrc/CWRC-Git/issues"
  },
  "homepage": "https://github.com/cwrc/CWRC-Git#readme",
  "dependencies": {
    "@octokit/rest": "^15.2.6",
    "xmldom": "0.1.27"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codecov.io": "^0.1.6",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "istanbul": "^0.4.5",
    "mocha": "^5.1.1",
    "nock": "^9.2.5",
    "nyc": "^11.7.1",
    "semantic-release": "^15.1.11"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "check-coverage": true,
    "per-file": true,
    "lines": 100,
    "exclude": [
      "coverage/**",
      "fixturesAndMocks/**",
      "spec/**",
      "node_modules/**"
    ],
    "include": [
      "spec/**"
    ],
    "statements": 100,
    "functions": 100,
    "branches": 100,
    "reporter": [
      "lcov"
    ]
  }
}
